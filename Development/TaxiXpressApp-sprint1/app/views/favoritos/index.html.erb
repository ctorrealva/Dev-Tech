<p id="notice"><%= notice %></p>

<h1>Listing Favoritos</h1>

<table>
  <thead>
    <tr>
      <th>Idfavorito</th>
      <th>Cliente</th>
      <th>Nombres</th>
      <th>Origen</th>
      <th>Destino</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favoritos.each do |favorito| %>
      <tr>
        <td><%= favorito.IdFavorito %></td>
        <td><%= favorito.cliente %></td>
        <td><%= favorito.Nombres %></td>
        <td><%= favorito.Origen %></td>
        <td><%= favorito.Destino %></td>
        <td><%= link_to 'Show', favorito %></td>
        <td><%= link_to 'Edit', edit_favorito_path(favorito) %></td>
        <td><%= link_to 'Destroy', favorito, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

