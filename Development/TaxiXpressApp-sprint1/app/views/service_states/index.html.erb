<p id="notice"><%= notice %></p>

<h1>Listing Service States</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @service_states.each do |service_state| %>
      <tr>
        <td><%= service_state.description %></td>
        <td><%= link_to 'Show', service_state %></td>
        <td><%= link_to 'Edit', edit_service_state_path(service_state) %></td>
        <td><%= link_to 'Destroy', service_state, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

