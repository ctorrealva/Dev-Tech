<%= simple_form_for @driver, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :license %>
  <%= error_span(@driver[:license]) %>
  <%= f.input :user_id %>
  <%= error_span(@driver[:user_id]) %>
  <%= f.input :first_name %>
  <%= error_span(@driver[:first_name]) %>
  <%= f.input :last_name %>
  <%= error_span(@driver[:last_name]) %>
  <%= f.input :class %>
  <%= error_span(@driver[:class]) %>
  <%= f.input :category %>
  <%= error_span(@driver[:category]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                drivers_path, :class => 'btn btn-default' %>
<% end %>
