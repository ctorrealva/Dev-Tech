<p id="notice"><%= notice %></p>

<h1>Listing Services</h1>

<table>
  <thead>
    <tr>
      <th>Client</th>
      <th>Driver</th>
      <th>Vehicle</th>
      <th>Payment type</th>
      <th>Source</th>
      <th>Destination</th>
      <th>Date hour</th>
      <th>Service state</th>
      <th>Score</th>
      <th>Comment</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.client %></td>
        <td><%= service.driver %></td>
        <td><%= service.vehicle %></td>
        <td><%= service.payment_type %></td>
        <td><%= service.source %></td>
        <td><%= service.destination %></td>
        <td><%= service.date_hour %></td>
        <td><%= service.service_state %></td>
        <td><%= service.score %></td>
        <td><%= service.comment %></td>
        <td><%= service.amount %></td>
        <td><%= link_to 'Show', service %></td>
        <td><%= link_to 'Edit', edit_service_path(service) %></td>
        <td><%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

