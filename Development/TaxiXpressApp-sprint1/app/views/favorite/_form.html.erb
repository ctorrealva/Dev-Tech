<%= simple_form_for @favorite, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@favorite[:name]) %>
  <%= f.input :client_id %>
  <%= error_span(@favorite[:client_id]) %>
  <%= f.input :source %>
  <%= error_span(@favorite[:source]) %>
  <%= f.input :destination %>
  <%= error_span(@favorite[:destination]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                favorites_path, :class => 'btn btn-default' %>
<% end %>
